import random

def coinflip():
    times = int(input("How many times would you like to flip the coin?"))
    ht = ["heads", "tails"]
    heads = 0
    tails = 0
    for i in range(times):
        choose = random.choice(ht)
        if choose == "heads":
            heads += 1
        else:
            tails +=1
    print(f"The number of heads was {heads} and the number of tails was {tails}")
coinflip()
